<h1><%= @forum.name  %></h1>
<table>
	<tr>
		<th width="70%">Thread Title</th>
		<th width="10%">Replies</th>
		<th width="10%">Last Post</th>
	</tr>
	<% for topic in @forum.topics.order("last_post_at desc") %>
		<tr>
			<td width="80%">
				<%= link_to h(topic.name), topic_path(topic.id) %>
			</td>

			<td>
				<%= topic.posts.count %>
			</td>

			<td class="right">
				<%= distance_of_time_in_words_to_now topic.last_post_at %> ago by 
				<%= link_to topic.user.name, "/users/#{topic.last_poster_id}" %>
			</td>

			<% if admin? %>
				<td>
					<%= link_to "Delete", topic, :confirm => 'Are you sure?', :method => :delete %>
				</td>
			<% end %>
		</tr>
	<% end %>
</table>

	<p class="new_thread"><% if signed_in? %><%= link_to "New Thread", "/topics/new?forum=#{@forum.id}" %><% end %></p>
