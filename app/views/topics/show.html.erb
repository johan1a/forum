<h1><%= @topic.name %></h1>

<% for post in @topic.posts %>
<div class="post" >
	<span class="left"><%= link_to post.user.name, user_url(post.user) %>
		<br />
		<span class="content"><%= post.content %></span>
		<br />
		<% if signed_in? %>
			<% if admin_or_owner?(post.user.id) %>
			<small>
				<%= link_to "Edit", edit_post_path(post) %>
				<%= link_to "Delete", post, :confirm => 'Are you sure?', :method => :delete %>
			</small>
			<% end %>
		<% end %>
	</span>
<br />
</div>
<% end %>

<p>
	<% if signed_in? %><%= link_to "Reply", "#{new_post_path}?topic=#{@topic.id}" %> |<% end %>
	<% if admin? %><%= link_to "Destroy Topic", @topic, :confirm => 'Are you sure?', :method => :delete %> |<% end %>
	<%= link_to "View All Threads", forum_path(@topic.forum_id) %>
</p>
